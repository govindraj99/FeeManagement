<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GeneratePaymentRequestTwoFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Studentâ€™s name"
                android:textColor="#636363" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/generatenameRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Details"
                android:textColor="#191919"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/Amt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="3dp"
                    android:text="Amount"
                    android:textColor="#636363"
                    android:textSize="12sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Amount_Tl"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amt_tv"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FFFFFF"
                    app:boxStrokeColor="#E6E6E6"
                    app:hintTextColor="#AEAEAE">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/gt_Amount_ET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="\u20B9"
                        android:inputType="number"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Duedate_Tl"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amt_tv"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/Amount_Tl"
                    android:focusableInTouchMode="false"
                    android:textColorHint="#AEAEAE"
                    app:boxStrokeColor="#E6E6E6"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:hintTextColor="#AEAEAE">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/gt_datepick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Set due date"
                        android:inputType="date"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/Duedate_Tl"
                    android:layout_alignStart="@id/Duedate_Tl"
                    android:layout_alignBottom="@id/Amt_tv"
                    android:layout_toRightOf="@id/Amount_Tl"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Due date"
                    android:textColor="#636363" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="4dp"
                android:text="Description"
                android:textColor="#636363"
                android:textSize="12sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description_Tl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFFFFF"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/gt_description_ET"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Enter description"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Amount details"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border5"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/feeamount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Fee amount"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/rupee_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/feeamount_tv"
                            android:layout_alignBottom="@+id/feeamount_tv"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="68dp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="\u20B9"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gprt_fee_amountRS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/rupee_tv"
                            android:layout_alignBottom="@id/rupee_tv"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="#191919"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/gprt_discountRV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="3dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gprt_discount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="5dp"
                            android:text="Discount"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gprt_rupee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/gprt_discount_tv"
                            android:layout_alignBottom="@id/gprt_discount_tv"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="68dp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="-\u20B9"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gprt_add_tv"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/gprt_rupee"
                            android:layout_alignBottom="@id/gprt_rupee"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="Add"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/gprt_additionRV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="3dp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gprt_addition_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="5dp"
                            android:text="Addition"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gprt_addtionrupee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/gprt_addition_tv"
                            android:layout_alignBottom="@+id/gprt_addition_tv"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="68dp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="+\u20B9"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gprt_additionRS_addtv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/gprt_addtionrupee"
                            android:layout_alignBottom="@+id/gprt_addtionrupee"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="Add"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:background="#E6E6E6" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/totalpay_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="5dp"
                            android:text="Total payable"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/gprto_rupee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/totalpay_tv"
                            android:layout_alignBottom="@id/totalpay_tv"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="68dp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="-\u20B9"
                            android:textColor="#191919"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/gprto_totalpayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/gprto_rupee"
                            android:layout_alignBottom="@id/gprto_rupee"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="0.0"
                            android:textColor="#191919"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="17dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="18dp"
                        android:background="#E6E6E6" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Processingfee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="8dp"
                    android:text="Processing fee"
                    android:textColor="#191919"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/Processingfee_tv"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@id/Processingfee_tv"
                    android:background="@drawable/ic_info" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Processingfee_tv"

                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:text="Processing fee payable by student"
                    android:textColor="#636363" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv"
                    android:padding="8dp"
                    android:text="Go to settings to edit options"
                    android:textColor="#302A5F14"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/sendrequest_btn"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/border5"
        android:enabled="false"
        android:text="Send Request" />

</FrameLayout>