<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/inte_all_students_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/mask_group"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/namesintegrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/inte_all_students_img"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@id/inte_all_students_img"
                android:fontFamily="@font/roboto_bold"
                android:text="Eliza O'Conner"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/rollno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/inte_all_students_img"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@id/inte_all_students_img"
                android:text="Roll No"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rollNo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/rollno"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/rollno"
                android:fontFamily="@font/roboto"
                android:text="03"
                android:textColor="#636363"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/transactioncount_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rollNo_tv"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/inte_all_students_img"
                android:text="0"
                android:textColor="#636363" />

            <TextView
                android:id="@+id/transactionttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/transactioncount_tv"
                android:layout_alignBottom="@id/transactioncount_tv"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/transactioncount_tv"
                android:fontFamily="@font/roboto"
                android:text="Transactions"
                android:textColor="#636363"
                android:textSize="12sp" />


            <CheckBox
                android:id="@+id/cardCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>