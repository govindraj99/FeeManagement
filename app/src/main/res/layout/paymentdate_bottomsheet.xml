<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="32dp"
    android:layout_height="match_parent">
<View
    android:layout_width="48dp"
    android:layout_height="5dp"
    android:background="#E6E6E6"
    android:layout_gravity="center"
    android:layout_marginTop="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER OPTIONS"
        android:textSize="12sp"
        android:textColor="#AEAEAE"
        android:fontFamily="@font/roboto_bold"
        android:padding="2dp"
        android:layout_marginTop="32dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/today_paymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="#191919"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/today_iv_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="289dp"
            android:src="@drawable/ic_check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/yesterday_paymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday"
            android:textColor="#191919"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/yesterday_iv_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="264dp"
            android:src="@drawable/ic_check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/this_month_paymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This month"
            android:textColor="#191919"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/thismonth_iv_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="256dp"
            android:visibility="gone"
            android:src="@drawable/ic_check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/past_month_paymentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past month"
            android:textColor="#191919"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/pastmonth_iv_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="256dp"
            android:visibility="gone"
            android:src="@drawable/ic_check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/past_three_month_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past 3 months"
            android:textColor="#191919"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/past3months_iv_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="236dp"
            android:src="@drawable/ic_check"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/customise_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customise date range"
            android:textColor="#191919"

            android:fontFamily="@font/roboto"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/customisedate_iv_pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="186dp"
            android:visibility="gone"
            android:src="@drawable/ic_check"/>
    </LinearLayout>
</LinearLayout>