<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/prd_three_discounttitle"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"
        android:text="Discount"
        android:textColor="#1089FF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/discount_rupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@id/prd_three_discounttitle"
        android:layout_alignBottom="@id/prd_three_discounttitle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="68dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="-\u20B9"
        android:textColor="#1089FF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/prd_three_discountamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/discount_rupee"
        android:layout_alignBottom="@+id/discount_rupee"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Add"
        android:textColor="#1089FF"
        android:textSize="14sp" />

</RelativeLayout>