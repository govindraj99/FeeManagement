<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ra_ElizaImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/mask_group"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/ra_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ra_ElizaImg"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@id/ra_ElizaImg"
                android:fontFamily="@font/roboto_bold"
                android:text="Eliza O'Conner"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/raStd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ra_ElizaImg"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@id/ra_ElizaImg"
                android:text="Integrated Batch"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/raStd"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@id/raStd"
                android:text="-" />

            <TextView
                android:id="@+id/ra_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/raStd"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/raStd"
                android:text="A" />

            <TextView
                android:id="@+id/raAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ra_ElizaImg"
                android:layout_marginStart="18dp"
                android:layout_marginTop="30dp"
                android:text="\u20B9 12,000"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/raAmount"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="Monthly fee"
                android:textColor="#AEAEAE"
                android:textSize="15sp" />

            <!--            <TextView-->
            <!--                android:id="@+id/hifen_tv"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignTop="@id/description_tv"-->
            <!--                android:layout_marginStart="2dp"-->
            <!--                android:layout_toRightOf="@id/description_tv"-->
            <!--                android:text="-"-->
            <!--                android:textColor="#AEAEAE" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/May_tv"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignBottom="@id/hifen_tv"-->
            <!--                android:layout_marginStart="2dp"-->
            <!--                android:layout_toRightOf="@id/hifen_tv"-->
            <!--                android:text="May"-->
            <!--                android:textColor="#AEAEAE"-->
            <!--                android:textSize="15sp" />-->

            <TextView
                android:id="@+id/dot_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/description_tv"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/description_tv"
                android:text="\u25cf"
                android:textColor="#AEAEAE" />

            <TextView
                android:id="@+id/radate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/dot_tv"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/dot_tv"
                android:text="12/05/2021, 06:00 PM"
                android:textColor="#AEAEAE" />


            <TextView
                android:id="@+id/ra_pending"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ra_ElizaImg"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="18dp"
                android:background="@drawable/border"
                android:padding="4dp"
                android:text="PENDING"
                android:textAlignment="center"
                android:textColor="#FFA931"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ra_refunded"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ra_ElizaImg"
                android:layout_centerVertical="true"
                android:layout_marginStart="170dp"
               android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:background="@drawable/border8"
                android:padding="4dp"
                android:text="Refunded"
                android:textAlignment="center"
                android:textColor="#636363"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ra_cancelled"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ra_ElizaImg"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/border8"
                android:padding="4dp"
                android:text="CANCELLED"
                android:textAlignment="center"
                android:textColor="#636363"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ra_paid"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ra_ElizaImg"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:background="@drawable/border2"
                android:padding="4dp"
                android:text="PAID"
                android:textAlignment="center"
                android:textColor="#28DF99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ra_overdue"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ra_ElizaImg"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:background="@drawable/border3"
                android:padding="4dp"
                android:text="OVERDUE"
                android:textAlignment="center"
                android:textColor="#FF414D"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>