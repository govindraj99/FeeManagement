<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fcrv_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="#636363"
        android:textSize="16sp"
        android:layout_toEndOf="@id/textView2"
        android:layout_alignTop="@id/textView2"
        android:fontFamily="@font/roboto"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:textColor="#636363"
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:layout_toEndOf="@id/fcrv_std"
        android:layout_alignTop="@id/fcrv_std"/>

    <CheckBox
        android:id="@+id/fcrv_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/fcrv_std"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/roboto"
        android:text="Integrated Batch"
        android:textColor="#636363"
        android:textSize="16sp"
        android:layout_toEndOf="@id/fcrv_checkbox"
        android:layout_alignBottom="@id/fcrv_checkbox"
        android:layout_alignTop="@id/fcrv_checkbox"/>


</RelativeLayout>