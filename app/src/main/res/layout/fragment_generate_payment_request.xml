<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneratePaymentRequest">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="68dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="6dp"
                android:text="To whom do you want to sent the request to?"
                android:textColor="#191919"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/individualBtn"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="24dp"
                    android:background="@drawable/border4"
                    android:text="Individual"
                    android:textColor="#AEAEAE" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Classbtn"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border4"
                    android:text="Class"
                    android:textColor="#AEAEAE" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Class"
                android:textColor="#636363"
                android:textSize="12sp" />
            <!--        <EditText-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="44dp"-->
            <!--            android:layout_marginTop="10dp"-->
            <!--            android:layout_marginHorizontal="24dp"-->
            <!--            android:hint="Select Class"-->
            <!--            android:padding="10dp"-->
            <!--            android:background="@drawable/border5"/>-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:hint="Select Class"
                app:boxBackgroundColor="#FFFFFF"
                app:boxStrokeColor="#E6E6E6">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:padding="9dp"
                    android:textSize="18sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Studentâ€™s name/mobile"
                android:textColor="#636363"
                android:textSize="12sp"

                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE"
                app:startIconDrawable="@drawable/search_img">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name_searchET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search by name/mobile"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"
                android:text="Details"
                android:textColor="#191919"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/Amt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="3dp"
                    android:text="Amount"
                    android:textColor="#636363"
                    android:textSize="12sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Amount_Tl"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amt_tv"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FFFFFF"
                    app:boxStrokeColor="#E6E6E6"
                    app:hintTextColor="#AEAEAE">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Amount_ET"
                        android:inputType="number"
                        android:hint="\u20B9"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Duedate_Tl"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="174dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amt_tv"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:layout_toRightOf="@id/Amount_Tl"
                    android:textColorHint="#AEAEAE"
                    app:boxStrokeColor="#E6E6E6"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    android:focusableInTouchMode="false"
                    app:hintTextColor="#AEAEAE">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/datepick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Set due date"
                        android:inputType="date"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/Duedate_Tl"
                    android:layout_alignStart="@id/Duedate_Tl"
                    android:layout_alignBottom="@id/Amt_tv"
                    android:layout_toRightOf="@id/Amount_Tl"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Due date"
                    android:textColor="#636363" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="4dp"
                android:text="Description"
                android:textColor="#636363"
                android:textSize="12sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description_Tl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"

                android:backgroundTint="#FFFFFF"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Enter description"
                    android:id="@+id/description_ET"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Amount details"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border5"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="18dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Fee amount"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="165dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="\u20B9"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:textColor="#191919"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="18dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/DiscountTV"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Discount"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="-\u20B9"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:visibility="gone"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/add_tv"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Add"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/discount2_layout"
                        android:layout_width="match_parent"
                        android:layout_marginStart="18dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/DiscountTV2"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Discount"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="-\u20B9"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:visibility="gone"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/add_tv2"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Add"
                            android:textColor="#1089FF"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="8dp"
                            android:text="Addition"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="180dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="+\u20B9"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:textColor="#FFA931"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:background="#E6E6E6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="5dp"

                            android:text="Total payable"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="160dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="\u20B9"
                            android:textColor="#191919"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/total_amt_payable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="0.00"
                            android:textColor="#191919"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="17dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="18dp"
                        android:background="#E6E6E6" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:id="@+id/Processingfee_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="8dp"
                    android:text="Processing fee"
                    android:textColor="#191919"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/Processingfee_tv"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@id/Processingfee_tv"
                    android:background="@drawable/ic_info" />
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processing fee payable by student"
                    android:layout_below="@id/Processingfee_tv"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:textColor="#636363"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go to settings to edit options"
                    android:textColor="#302A5F14"
                    android:padding="8dp"
                    android:layout_below="@id/tv"
                    android:layout_marginStart="24dp"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="171dp"
        android:id="@+id/send_request_btn"
        android:layout_height="44dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/border5"
        android:enabled="false"
        android:text="Send Request" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>