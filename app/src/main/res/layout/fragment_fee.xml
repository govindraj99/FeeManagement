<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fee">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kycimg"
            android:layout_width="254dp"
            android:layout_height="220.13dp"
            android:layout_gravity="center"
            android:src="@drawable/ill_kyc_verifications" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32.87dp"
            android:text="Welcome to Fee Management"
            android:textColor="#191919"
            android:textSize="18sp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:padding="3dp"
            android:text="You are just one step away from accepting payments from your customers. All we need is your basic details to get you started."
            android:textAlignment="center"
            android:textColor="#636363"
            android:textSize="12sp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:text="Activate your account to start accepting payments from customers."
            android:textAlignment="center"
            android:textColor="#636363"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Activatebtn"
            android:layout_width="129dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:background="@drawable/roundbutton"
            android:text="ACTIVATE" />

    </LinearLayout>

</FrameLayout>