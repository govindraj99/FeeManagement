<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Addition Details"
                android:textColor="#191919"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:padding="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Addition title *"
                android:layout_marginTop="30dp"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="12sp"
                android:padding="5dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginHorizontal="24dp"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE">

                <EditText
                    android:id="@+id/addition_detailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter addition title" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Addition details"
                android:textColor="#636363"
                android:textSize="12sp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description_Tl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"

                android:backgroundTint="#FFFFFF"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Enter addition details"
                    android:id="@+id/addition_description_ET"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textColor="#636363"
                android:textSize="12sp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/roboto_bold"
                android:padding="5dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addition_amount_Tl"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Amt_tv"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFFFFF"
                app:boxStrokeColor="#E6E6E6"
                app:hintTextColor="#AEAEAE">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/additionAmount_ET"
                    android:inputType="number"
                    android:hint="\u20B9      Enter amount"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addcancel_btn"
                    android:layout_width="142dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/border4"
                    android:text="CANCEL"
                    android:layout_marginBottom="10dp"
                    android:textColor="#636363" />
                <Button
                    android:id="@+id/addition_aadbtn"
                    android:layout_width="142dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:enabled="false"
                    android:layout_marginLeft="18dp"
                    android:background="@drawable/border6"
                    android:text="Add"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>