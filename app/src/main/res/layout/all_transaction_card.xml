            <TextView
                android:id="@+id/offline_tv"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ElizaImg"
                android:layout_centerVertical="true"
                android:layout_marginStart="170dp"
                android:layout_toRightOf="@id/ElizaImg"
                android:background="@drawable/offlinebtn"
                android:padding="6dp"
                android:text="OFFLINE"
                android:textAlignment="center"
                android:textColor="#FFA931"
                android:textSize="16sp"
                android:visibility="gone"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/online_tv"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ElizaImg"
                android:layout_centerVertical="true"
                android:layout_marginStart="170dp"
                android:layout_toEndOf="@id/ElizaImg"
                android:background="@drawable/onlinebtn"
                android:padding="6dp"
                android:text="ONLINE"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:visibility="gone"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>