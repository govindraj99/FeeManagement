<!--                android:layout_marginStart="2dp"-->
<!--                android:layout_toRightOf="@id/hifen_tv"-->
<!--                android:text="May"-->
<!--                android:textColor="#AEAEAE"-->
<!--                android:textSize="15sp" />-->

            <TextView
                android:id="@+id/dot_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/notetv"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/notetv"
                android:text="\u25cf"
                android:textColor="#AEAEAE" />

            <TextView
                android:id="@+id/date_transac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/dot_tv"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@id/dot_tv"
                android:text="12/05/2021, 06:00 PM"
                android:textColor="#AEAEAE" />

<!--            <TextView-->
<!--                android:id="@+id/cooma_tv"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
