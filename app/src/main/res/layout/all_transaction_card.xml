<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewtrasc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ElizaImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/mask_group"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

            <TextView
                android:id="@+id/namesT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ElizaImg"
                android:layout_marginStart="12dp"
                android:layout_toRightOf="@id/ElizaImg"
                android:fontFamily="@font/roboto_bold"
                android:text="Eliza O'Conner"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/stdtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ElizaImg"
                android:layout_marginStart="12dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@id/ElizaImg"
                android:text="Integrated Batch"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/stdtv"
                android:layout_marginStart="2dp"
                android:layout_toRightOf="@id/stdtv"
                android:text="-" />

            <TextView
                android:id="@+id/sectionT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/stdtv"
                android:layout_marginStart="6dp"
                android:layout_toRightOf="@id/stdtv"
                android:text="A" />

            <TextView
                android:id="@+id/Amount_transac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ElizaImg"
                android:layout_marginStart="18dp"
                android:layout_marginTop="30dp"
                android:text="\u20B9 12,000"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Amount_transac"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:text="Monthly fee"
                android:textColor="#AEAEAE"
                android:textSize="15sp" />

<!--            <TextView-->
<!--                android:id="@+id/hifen_tv"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
